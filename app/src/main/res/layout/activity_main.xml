<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="checkbox.cursoandroid.com.checkbox.MainActivity">

    <CheckBox
        android:id="@+id/checkBoxGatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:text="Gato"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/checkBoxCaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxGatoId"
        android:layout_alignStart="@+id/checkBoxGatoId"
        android:layout_below="@+id/checkBoxGatoId"
        android:layout_marginTop="39dp"
        android:text="Cao" />

    <CheckBox
        android:id="@+id/checkBoxPapagaioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxCaoId"
        android:layout_alignStart="@+id/checkBoxCaoId"
        android:layout_below="@+id/checkBoxCaoId"
        android:layout_marginTop="38dp"
        android:text="Papagaio" />

    <Button
        android:id="@+id/botaoMostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxPapagaioId"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/checkBoxPapagaioId"
        android:layout_toRightOf="@+id/checkBoxPapagaioId"
        android:text="Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxGatoId"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBoxGatoId"
        android:layout_marginTop="37dp"
        android:text=" Quais animais voce tem ?" />

    <TextView
        android:id="@+id/textoExibicaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoMostrarId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Mostrar..." />
</RelativeLayout>
